<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/workProgressText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="0%"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/enqueueWorkBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/enqueueWorkBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginBottom="44dp"
        android:text="Enqueue Task"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/cancelWorkBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel Task"
        app:layout_constraintBottom_toBottomOf="@+id/enqueueWorkBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toEndOf="@+id/enqueueWorkBtn"
        app:layout_constraintTop_toTopOf="@+id/enqueueWorkBtn" />

</androidx.constraintlayout.widget.ConstraintLayout>